{
    "manifest_version": 3,
    "name": "YouTube Speed Controller",
    "version": "1.0",
    "description": "Control video speed on YouTube.",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["content-script.js"], 
        "all_frames": false
      }
    ]
  }